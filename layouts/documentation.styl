.layout-documentation {
	.content-wrap {
		padding-top: 0
		> * {
			display: inline-block
			vertical-align: top
		}
	}

	.partial-documentation-left-nav {
		width: 195px
	}

	.docs-content {
		width: calc(100% - 200px)
		h1:first-child {
			margin-top: 0
		}

		*[id]:before {
			content: ''
			display: block
			position: relative
			width: 0
			height: 70px
			margin-top: -70px
		}

		code:not(.hljs) {
			padding: 3px 6px
			border-radius: 3px
			color: $clr-mid-gray
			background-color: $clr-light-gray
		}
		a > code:not(.hljs) {
			color: $clr-primary
		}

		h1 {
			margin-top: 5rem
			margin-bottom: 2rem
			padding-bottom: 1rem
			color: $clr-dark-gray
			border-bottom: 3px solid $clr-light-gray
		}

		h2 {
			margin-top: 4rem
			margin-bottom: 1rem
			color: $clr-mid-gray
			font-size: 2.6rem
		}

		h1+h2 {
			margin-top: 1rem
		}

		h4 {
			margin-bottom: 0.5rem
			& + p {
				margin-top: 0.5rem
			}
		}

		em {
			color: $clr-mid-gray
		}

	}
	table {
		border-style: solid
		border-color: $clr-light-gray
		border-width: 1px 0 0 1px
		th, td {
			padding: 10px 20px
			border-style: solid
			border-color: $clr-light-gray
			border-width: 0 1px 1px 0
		}

		th {
			font-weight: normal
			color: $clr-white
			background-color: $clr-primary
		}
	}
}
