{
	"source": "./content",
	"destination": "./build",
	"metadata": {
		"title": "PLOP",
		"description": "Consistency made simple."
	},
	"clean": true,
	"plugins": {
		"metalsmith-markdown": true,
		"metalsmith-register-helpers": true,
		"metalsmith-permalinks": "",
		"metalsmith-layouts": {
			"engine": "handlebars",
			"partials": "partials"
		},
		"metalsmith-browserify": {
			"dest": "js/main.js",
			"args": [ "scripts/index.js" ]
		},
		"metalsmith-stylus": {
			"compress": true,
			"sourcemap": true,
			"paths": ["./styles"]
		},
		"metalsmith-browser-sync": {
			"ui": false,
			"files": [
				"content/**",
				"styles/**",
				"scripts/**",
				"layouts/**",
				"partials/**",
				"helpers/**"
			],
			"server": "build",
			"port": 5000,
			"ghostMode": false,
			"open": false
		}
	}
}
